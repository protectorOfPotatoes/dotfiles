set $terminal foot
set $mod Mod4
set $menu tofi-run | xargs swaymsg exec --
set $notification swaync
seat seat0 xcursor_theme Bibata-Modern-Ice 24
# --- Colors (Catppuccin Macchiato) ---
set $rosewater #f5e0dc
set $lavender  #b4befe
set $text      #cdd6f4
set $overlay0  #6c7086
set $mantle    #181825
set $base      #1e1e2e
set $green     #a6da95
# --- The "Anti-Tile" Workflow ---
# 1. Force every new workspace to start as a tabbed stack
workspace_layout tabbed

# 2. Force every new window to join the tabbed stack automatically
for_window [title=".*"] layout tabbed

# --- The "Clean Bar" Hack ---
# Setting the font size to 0 hides the text and shrinks the bar height
font pango:monospace 1


# Adjust borders so you just see a thin 2px line at the top
default_border none
default_floating_border pixel 2

# --- Refined Colors (Border BG Text Indicator ChildBorder) ---
# Active tab will be Lavender, inactive will be Overlay0
client.focused           $green $green $green $green $green
client.focused_inactive  $base $base $base $base $base
#$overlay0 $base $text $overlay0 $overlay0
client.unfocused         $base $base $base $base $base
client.urgent            $rosewater $base $text $rosewater $rosewater

# --- Navigation & Execution ---
bindsym $mod+Return exec $terminal
bindsym $mod+q kill
bindsym $mod+d exec $menu
bindsym $mod+Right focus right
bindsym $mod+Left focus left
bindsym $mod+Tab focus right
bindsym $mod+Shift+Tab focus left
bindsym $mod+Shift+e exit
# Keep your auto-execs
exec dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP=sway
exec --no-startup-id swaybg -i $HOME/wallpaper/back.png -m fill
exec --no-startup-id $notification
exec --no-startup-id waybar
#Key Bindings
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10

bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10

bindsym $mod+Shift+a exec grim ~/Pictures/$(date +'%Y-%m-%d_%H-%M-%S').png
bindsym $mod+f fullscreen toggle
bindsym $mod+Escape exec bash ~/.config/scripts/exitmenu.sh
bindsym $mod+w exec pkill -USR1 waybar
# Volume
bindsym XF86AudioRaiseVolume exec --no-startup-id wpctl set-volume @DEFAULT_AUDIO_SINK@ 1%+
bindsym XF86AudioLowerVolume exec --no-startup-id wpctl set-volume @DEFAULT_AUDIO_SINK@ 1%-
bindsym XF86AudioMute exec --no-startup-id wpctl set-mute @DEFAULT_AUDIO_SINK@  toggle 
bindsym XF86MonBrightnessUp   exec --no-startup-id brightnessctl set 1%+
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl set 1%-
bindsym XF86KbdBrightnessUp exec --no-startup-id brightnessctl --device='smc::kbd_backlight' set 20%+ 
bindsym XF86KbdBrightnessDown exec --no-startup-id brightnessctl --device='smc::kbd_backlight' set 20%- 
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

# General

output LVDS-1 scale 1.0

default_border pixel 0
gaps inner 0
gaps outer 0

input * {
    xkb_layout us
    #xkb_options grp:caps_toggle

    tap enabled
    natural_scroll enabled
    dwt enabled
}


