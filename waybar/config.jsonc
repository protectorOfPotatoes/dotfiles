"wireplumber": {
    "format": "{icon} {volume}%",
    "format-muted": "",
    "on-click": "pavucontrol",
    "format-icons": ["", "", ""],
    "max-volume": 150,
    "scroll-step": 5
},


    "backlight": {
        "format": "{icon}:{percent}%",
        "format-icons": [" ", " ", "󰖨 "],
        "on-click": "~/.config/waybar/scripts/brightness_slider.sh"
    },

    "group/system": {
        "orientation": "horizontal",
        "modules": [
            //"custom/split",
            "network",
            "custom/bluetooth",
            "battery",
            "custom/nirinc"
        ]
    },

    "network": {
        "interface": "wlan0",
        "format-wifi": "{icon} ",
        "format-ethernet": "{ifname}󰈀 LAN",
        "format-disconnected": "󰖪",
        "tooltip-format": "{ipaddr}\n{ssid} ({signalStrength}%)",
        "on-click": "foot -e gazelle",
        "format-icons": [ "󰤯", "󰤟", "󰤢", "󰤥", "󰤨" ]
    },

   "custom/bluetooth": {
        "format": "  ",
        //"exec": "~/.config/waybar/scripts/bluetooth_status.sh",
        "interval": 5,
        "on-click": "foot -e bluetoothctl"
    },

    "battery": {
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{icon} {capacity}%",
        "format-full": "{icon} {capacity}%",
        "format-charging": "󱐋{capacity}%",
        "format-plugged": "{capacity}%",
        "format-icons": ["", "", "", "", ""]
       
    },

    "custom/nirinc": {
    "tooltip": false,
    "format": "{icon}",
    "format-icons": {
        "notification": "<span foreground='red'><sup></sup></span>",
        "none": "",
        "dnd-notification": "<span foreground='red'><sup></sup></span>",
        "dnd-none": "",
        "inhibited-notification": "<span foreground='red'><sup></sup></span>",
        "inhibited-none": ""
    },
    "return-type": "json",
    "exec-if": "command -v nirincctl",
    "exec": "nirinc-waybar", // This requires the nirinc-waybar script or similar mechanism
    "on-click": "nirincctl mode -t do-not-disturb",
    "on-click-right": "nirincctl dismiss -a",
    "interval": 1
    }
}]
