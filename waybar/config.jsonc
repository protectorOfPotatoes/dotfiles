[{
    "layer": "top",
    "position": "top",
    "exclusive": true,
    "height": 20,
    "spacing": 0,

    "modules-left": [
        "group/Utilities",
        "group/workspaces",
        "group/appmenu"
    ],

    "modules-center": [
        "group/windows"
    ],

    "modules-right": [
        "group/cpuram",
        "group/brightvol",
        "group/system"
    ],

    // --- SHARED COMPONENTS ---
   /* "custom/split": {
        "format": "|",
