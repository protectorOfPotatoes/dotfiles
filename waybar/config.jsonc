"group/appmenu":
{
  "orientation": "horizontal",
  "modules": [
    "custom/vesktop", "custom/zen", "custom/filemanager" ]
},

"custom/vesktop":{
"format": "    ",
"on-click": "vesktop"
},

"custom/zen":{
"format":"    ",
"on-click": "zen-browser"
},

"custom/filemanager":{
  "format":"    ",
  "on-click": "foot -e sh -c 'EDITOR=helix yazi'"
},


"custom/obsidian":{
  "format":"  󰏫   ",
  "on-click": "obsidian"
},

