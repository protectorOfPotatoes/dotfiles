    // --- LEFT GROUPS ---
    "group/Utilities": {
        "orientation": "horizontal",
        "modules": [
            "custom/arch",
            "custom/power",
            "custom/wallpaper"
        ]
    },

    "custom/arch": {
        "format": "󰣇 ",
        "tooltip": false,
        "on-click": "fuzzel"
    },

    "custom/power": {
          "format" : "   ",
          "tooltip": false,
          "on-click": "bash ~/.config/niri/powermenu.sh"
        },

    "custom/wallpaper": {
        "format": " 󰸉  ",
        "on-click": "~/.config/niri/swww_random.sh",
        "tooltip": false
    },

