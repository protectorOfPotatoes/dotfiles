[{
    "layer": "top",
    "position": "top",
    "height": 40,
    "spacing": 5,

    "modules-left": [
        "group/Utilities",
        "group/workspaces",
        "custom/visualizer"
    ],

    "modules-center": [
        "group/windows"
    ],

    "modules-right": [
        "group/cpuram",
        "group/brightvol",
        "group/system"
    ],

    // --- SHARED COMPONENTS ---
   /* "custom/split": {
        "format": "|",
        "tooltip": false
    },*/

    // --- LEFT GROUPS ---
    "group/Utilities": {
        "orientation": "horizontal",
        "modules": [
            "custom/arch",
            //"custom/split",
            "custom/power"
            //"custom/split"
        ]
    },

    "custom/arch": {
        "format": "Û∞£á ",
        "tooltip": false,
        "on-click": "fuzzel"
    },
    "custom/visualizer": {
    "exec": "python3 ~/.config/waybar/scripts/waybar_cava.py",
    "format": "{}",
    "restart-interval": 1
},

"custom/power": {
          "format" : " ÔÄë  ",
          "tooltip": false,
          "on-click": "wlogout", // Opens your wlogout menu
          "on-click-right": "wlogout --protocol layer-shell"
        },

/*    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ",
            "deactivated": "ÔÅ∞"
        }
    },

    "custom/powerprofile": {
        "exec": "~/.config/waybar/scripts/powerprofile.sh display",
        "on-click": "~/.config/waybar/scripts/powerprofile.sh toggle",
        "interval": 5,
        "tooltip": true,
